package algo.recursion;

public class App {

	public static void main(String[] args) {
		reduceByOne(10);
		System.out.println(recursiveFindLinear(new int[] {1,2,3,4,5},2, 0));
	}
	
	public static void reduceByOne(int n) {
		if(n >= 0) {
			reduceByOne(n-1);
		}
		
		System.out.println("Completed Call:" + n);
	}
	
	public static int recursiveFindLinear(int[] a,int key,int i) {
		if(i>a.length) {
			return -1;
		}else if(a[i] == key) {
			return i;
		}else {
			return recursiveFindLinear(a, key, i+1);
		}
	}

}
